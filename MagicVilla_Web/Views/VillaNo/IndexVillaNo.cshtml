@model IEnumerable<MagicVilla_Web.Models.Dto.VillaNoDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-asp-controller="VillaNo" asp-action="CreateVillaNo" class="btn btn-outline-primary"><i class="bi bi-clipboard2-plus-fill"></i> Create New Villa Number</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Villa Name
                </th>
                <th>
                    Villa Number
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var villa in Model)
            {
                <tr>
                    <td>@villa.Villa.Name</td>
                    <td>@villa.VillaNo</td>
                    <td>
                        <a asp-controller="VillaNo" asp-action="UpdateVillaNo" asp-route-villaNo="@villa.VillaNo" class="btn btn-success"><i class="bi bi-pen"></i></a>
                        <a asp-controller="VillaNo" asp-action="DeleteVillaNo" asp-route-villaNo="@villa.VillaNo" class="btn btn-danger"><i class="bi bi-journal-x"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
