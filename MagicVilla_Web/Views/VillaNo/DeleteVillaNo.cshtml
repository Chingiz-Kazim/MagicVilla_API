@model MagicVilla_Web.Models.VM.VillaNoDeleteVM

<form asp-action="DeleteVillaNo">
    <br />
    <div class="container p-3 border">
        <h1 class="text-primary">Delete Villa Number</h1>
        <hr />
        <input hidden asp-for="VillaNo.VillaNo"/>
        <div class="row">

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="VillaNo.VillaNo"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="VillaNo.VillaNo" disabled/>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="VillaNo.VillaID"></label>
            </div>
            <div class="col-10 pb-3">
                <select class="form-select" asp-for="VillaNo.VillaID" asp-items="@Model.VillaList">
                    <option disabled selected>--Select Villa--</option>
                </select>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="VillaNo.SpecialDetails"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea class="form-control" rows="5" asp-for="VillaNo.SpecialDetails" disabled></textarea>
            </div>

            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-controller="VillaNo" asp-action="IndexVillaNo">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
