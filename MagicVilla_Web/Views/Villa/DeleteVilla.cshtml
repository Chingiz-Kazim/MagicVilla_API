@model MagicVilla_Web.Models.Dto.VillaDTO

<form asp-action="DeleteVilla">
    <br />
    <div class="container p-3 border">
        <h1 class="text-primary">Delete Villa</h1>
        <hr />

        <input hidden asp-for="Id" />
        <div class="row">

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="Name"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Name" disabled/>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="Rate"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Rate" disabled />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="Details"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea class="form-control" rows="5" asp-for="Details" disabled></textarea>
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="Occupancy"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Occupancy" disabled />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="ImageURL"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="ImageURL" disabled />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="Sqft"></label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="Sqft" disabled />
            </div>

            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;" asp-for="Amenity"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea class="form-control" rows="2" asp-for="Amenity" disabled></textarea>
            </div>

            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-controller="Villa" asp-action="IndexVilla">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
